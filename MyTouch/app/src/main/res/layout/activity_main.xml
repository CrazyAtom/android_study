<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.touch.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X 좌표"
        android:textSize="30dp"
        android:id="@+id/textViewX" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextX"
        android:layout_alignBottom="@+id/textViewX"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y 좌표"
        android:textSize="30dp"
        android:id="@+id/textViewY"
        android:layout_below="@+id/textViewX" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextY"
        android:layout_alignBottom="@+id/textViewY"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="터치 횟수"
        android:textSize="30dp"
        android:id="@+id/textViewCntTouch"
        android:layout_below="@+id/textViewY" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCntTouch"
        android:layout_alignBottom="@+id/textViewCntTouch"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewCntTouch" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:layout_alignParentEnd="false"
        android:background="#00ff00"
        android:layout_below="@+id/textViewCntTouch"
        android:clickable="false" />

</RelativeLayout>
