<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.khb.study05.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/textViewName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:id="@+id/textViewOld"
        android:layout_below="@+id/editTextName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextOld"
        android:layout_below="@+id/editTextName"
        android:layout_alignStart="@+id/editTextName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:id="@+id/textViewAdd"
        android:layout_below="@+id/editTextOld"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAdd"
        android:layout_below="@+id/editTextOld"
        android:layout_alignStart="@+id/editTextOld"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/buttonSave"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editTextAdd"
        android:layout_alignStart="@+id/editText"
        android:textSize="30dp"
        android:onClick="onButtonSaveClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:id="@+id/buttonClose"
        android:textSize="30dp"
        android:layout_alignTop="@+id/buttonSave"
        android:layout_toEndOf="@+id/buttonSave"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력한 이름 : "
        android:id="@+id/textViewInputName"
        android:layout_below="@+id/buttonSave"
        android:layout_alignEnd="@+id/buttonSave"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력한 나이 : "
        android:id="@+id/textViewInputOld"
        android:layout_below="@+id/textViewInputName"
        android:layout_marginTop="24dp"
        android:layout_alignStart="@+id/textViewInputName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력한 주소 : "
        android:id="@+id/textViewInputAdd"
        android:layout_below="@+id/textViewInputOld"
        android:layout_marginTop="24dp"
        android:layout_alignStart="@+id/textViewInputOld" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResultName"
        android:layout_alignBottom="@+id/textViewInputName"
        android:layout_toEndOf="@+id/textViewInputName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResultOld"
        android:layout_alignBottom="@+id/textViewInputOld"
        android:layout_toEndOf="@+id/textViewInputOld" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResultAdd"
        android:layout_alignBottom="@+id/textViewInputAdd"
        android:layout_toEndOf="@+id/textViewInputAdd" />
</RelativeLayout>
